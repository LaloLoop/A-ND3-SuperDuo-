<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/widget_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_toolbar_height"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:background="@color/primary"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"
            android:text="@string/widget_detail_desc"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"/>

            <TextView
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:text="@string/no_scores_available"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:paddingLeft="@dimen/widget_empty_padding"
                android:paddingRight="@dimen/widget_empty_padding"
                android:paddingStart="@dimen/widget_empty_padding"
                android:paddingEnd="@dimen/widget_empty_padding"
                />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>