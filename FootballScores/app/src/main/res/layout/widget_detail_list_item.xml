<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/widget_list_item_padding"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/home_crest"
            android:layout_width="@dimen/widget_list_icon_side"
            android:layout_height="@dimen/widget_list_icon_side"
            tools:src="@drawable/no_icon"
            android:layout_marginBottom="@dimen/widget_internal_margin"/>

        <TextView
            android:id="@+id/home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="CSK Moscow"
            android:textColor="@color/primary_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score_textview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/widget_list_icon_side"
            tools:text="1 - 0"
            android:layout_marginBottom="@dimen/widget_list_item_padding"
            android:textColor="@color/primary_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11:00"
            android:textColor="@color/primary_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/away_crest"
            android:layout_width="@dimen/widget_list_icon_side"
            android:layout_height="@dimen/widget_list_icon_side"
            tools:src="@drawable/no_icon"
            android:layout_marginBottom="@dimen/widget_internal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="VfL Wolfsburg"
            android:textColor="@color/primary_text"
            android:id="@+id/away_name"/>

    </LinearLayout>

</LinearLayout>