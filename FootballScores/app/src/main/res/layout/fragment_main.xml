<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/list_horizonal_margin"
    android:layout_marginRight="@dimen/list_horizonal_margin"
    android:layout_marginStart="@dimen/list_horizonal_margin"
    android:layout_marginEnd="@dimen/list_horizonal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/list_horizonal_margin"
    android:paddingEnd="@dimen/list_horizonal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/scores_list"
        android:divider="@android:color/transparent"
        android:dividerHeight="15sp"
        />

    <TextView
        android:id="@+id/scores_empty_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="@string/no_scores_available"
        android:gravity="center"
        android:textColor="@color/primary_text"
        />

</FrameLayout>
